rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function
    function isAuthenticated() {
      return request.auth != null;
    }

    // Allow access to user post images
    // Path used in app: posts/display/{userId}/{postId}.jpg
    match /posts/display/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // User avatars (stable overwrite path to avoid multiplying files)
    // App path: avatars/{uid}.jpg
    // Read: authenticated-only (consistent with posts; avatars are still personal data).
    match /avatars/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && fileName == (request.auth.uid + '.jpg')
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Default block all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
